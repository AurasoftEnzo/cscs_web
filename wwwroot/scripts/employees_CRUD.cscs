    id = args["RouteValues"]["Id"];

    fields = [
        "Name", "Surname", "Age", "Address", "City", "Email"
    ];

    values = {};

    // print("sizefields: " + Size(fields));  
    
    for(i = 0; i < Size(fields); i++) {
