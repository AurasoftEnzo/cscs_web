function IsInt(value)
{
    if (value == "")
    {
        return false;
    }

    try
    {        
        // Check if value is a valid integer
        int1 = int(value);
        str2 = string(int1);
        if(value != str2){
            throw "Int Validacija nije pro코la.\nvalue = " + value;
        }

        //print("Int Validacija OK");        
        return true; 
    }
    catch(ex11)
    {        
        //print(ex11);
        return false;
    }

    return false;
}


